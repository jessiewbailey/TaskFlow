apiVersion: v1
kind: Secret
metadata:
  name: taskflow-env
  namespace: taskflow
type: Opaque
stringData:
  DATABASE_URL: "mysql+aiomysql://CHANGE_ME_DB_USER:CHANGE_ME_DB_PASS@mysql:3306/CHANGE_ME_DB_NAME"
  MYSQL_ROOT_PASSWORD: "CHANGE_ME_ROOT_PASSWORD"
  MYSQL_DATABASE: "taskflow_db"
  MYSQL_USER: "CHANGE_ME_DB_USER"
  MYSQL_PASSWORD: "CHANGE_ME_DB_PASS"
  SECRET_KEY: "CHANGE_ME_SECRET_KEY_32_CHARS_MIN"
  AI_WORKER_URL: "http://taskflow-ai:8001"
  BACKEND_API_URL: "http://taskflow-api:8000"
  OLLAMA_HOST: "http://ollama:11434"